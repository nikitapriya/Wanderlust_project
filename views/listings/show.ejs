<% layout("layouts/boilerplate")%>
<script>
  const mapToken = "<%=process.env.MAP_TOKEN%>";
  const listing = <%- JSON.stringify(listing) %>;
</script>
<div class="row">
  <div class="col-15 offset-3 show-card">
    <h3><%= listing.title %></h3>
    <div class="card col-6 listing-card">
      <img
        src="<%= listing.image.url %>"
        class="card-img-top show-img"
        alt="listing img"
      />
      <div class="card-body">
        <p class="card-text">
          Owned By:<i><b><%= listing.owner.username %></b></i> <br /><%=
          listing.description %> <br />
          &#8377; <%= listing.price.toLocaleString("en-IN") %> <br />
          <%= listing.country %> <br />
          <%= listing.location %>
        </p>
      </div>
    </div>
  </div>
  <% if(currUser && listing.owner._id.equals(currUser._id)){ %>
  <div class="show-btn">
    <a
      href="/listings/<%= listing._id %>/edit"
      class="btn btn-dark offset-3 col-1 edit-btn"
      >Edit</a
    >
    <br /><br />
    <form action="/listings/<%=  listing._id %>?_method=DELETE" method="post">
      <button class="btn btn-dark offset-6">DELETE</button>
    </form>
  </div>
  <% } %>

  <div class="col-8 offset-3 mb-3 mt-3">
    <% if(currUser){ %>
    <hr />
    <h4>Leave your review</h4>
    <form
      action="/listings/<%= listing._id %>/reviews"
      method="post"
      novalidate
      class="needs-validation"
    >
      <div class="mb-3 mt-3">
        <label for="rating" class="form-label">Rating</label>
        <fieldset class="starability-heart">
          <input
            type="radio"
            id="no-rate"
            class="input-no-rate"
            name="review[rating]"
            value="1"
            checked
            aria-label="No rating."
          />
          <input
            type="radio"
            id="first-rate1"
            name="review[rating]"
            value="1"
          />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input
            type="radio"
            id="first-rate2"
            name="review[rating]"
            value="2"
          />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input
            type="radio"
            id="first-rate3"
            name="review[rating]"
            value="3"
          />
          <label for="first-rate3" title="Average">3 stars</label>
          <input
            type="radio"
            id="first-rate4"
            name="review[rating]"
            value="4"
          />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input
            type="radio"
            id="first-rate5"
            name="review[rating]"
            value="5"
          />
          <label for="first-rate5" title="Amazing">5 stars</label>
        </fieldset>
      </div>

      <div class="mb-3 mt-3">
        <label for="comment" class="form-label">Comments</label>
        <textarea
          name="review[comment]"
          id="comment"
          cols="20"
          rows="5"
          class="form-control"
          required
        ></textarea>
        <div class="invalid-feedback">
          please write some comment for your reviews
        </div>
      </div>
      <div><button class="btn btn-outline-dark">Submit</button></div>
    </form>
    <hr />
    <% } %>
    <div>
      <% if (listing.reviews.length>0){ %>
      <b>All Reviews</b>
      <div class="row ms-3 mb-3 mt-3">
        <% for (review of listing.reviews){ %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <p
              class="starability-result card-text"
              data-rating="<%= review.rating%>"
            ></p>
            <p class="card-text"><%= review.comment%></p>
          </div>
          <br />
          <form
            class="mb-3"
            action="/listings/<%=  listing._id %>/reviews/<%= review._id %>?_method=DELETE"
            method="post"
          >
            <% if (currUser && review.author._id.equals(currUser._id)) { %>
            <button class="btn btn-dark btn-sm">Delete</button>
            <% } %>
          </form>
        </div>
        <% } %>
      </div>
      <hr />
      <% } %>
    </div>
  </div>
  <div class="col-6 offset-3 mb-3 mt-3">
    <h1>Where You'll be</h1>
    <div id="map"></div>
  </div>
</div>
<script src="/js/map.js"></script>
