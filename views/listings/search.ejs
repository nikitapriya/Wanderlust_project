<% layout("layouts/boilerplate")%>
<style>
    .gallery {
      overflow-x: scroll;
      display: flex;
      flex-wrap: nowrap;
      width: 70%;
    }
    .gallery-wrap {
      display: flex;
      align-items: center;
      justify-content: center;
      margin: auto;
    }
    .gallery-div {
      width: 100%;
      display: grid;
      grid-template-columns: auto auto auto auto auto auto auto auto auto auto auto auto auto auto auto;
      flex: none;
      grid-gap: 10px;
    }
    .gallery::-webkit-scrollbar {
      display: none;
    }
    #nextBtn {
      cursor: pointer;
      font-size: 2rem;
      margin-right: 0.5rem;
      filter: grayscale(100%);
      transition: transform 0.5s;
      opacity: 0.8;
      margin-left: 1rem;
    }
    #backBtn {
      cursor: pointer;
      font-size: 2rem;
      filter: grayscale(100%);
      transition: transform 0.5s;
      opacity: 0.8;
    }
    #backBtn:hover {
      filter: grayscale(0);
      cursor: pointer;
      transform: scale(1.1);
      opacity: 1;
    }
    #nextBtn:hover {
      filter: grayscale(0);
      cursor: pointer;
      transform: scale(1.1);
      opacity: 1;
    }
    @media (max-width: 575px) {
      .gallery-wrap{
          display: none;
      }
    }
  </style>
  
  <div class="gallery-wrap">
    <i class="fa-solid fa-angle-left fa-xl" id="backBtn"></i>
    <div id="filters">
      <div class="gallery">
        <div class="gallery-div">
          <div class="filter">
            <div><i class="fa-solid fa-fire"></i></div>
            <p>Trending</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-bed"></i></div>
            <p>Rooms</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-mountain-city"></i></div>
            <p>Iconic Cities</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-cow"></i></div>
            <p>Farm</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-mountain-sun"></i></div>
            <p>Mountains</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-campground"></i></div>
            <p>Camping</p>
          </div>
          <div class="filter">
            <div><i class="fa-brands fa-fort-awesome"></i></div>
            <p>Castels</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-person-swimming"></i></div>
            <p>Amazing Pools</p>
          </div>
          <div class="filter">
            <div><i class="fa-regular fa-snowflake"></i></div>
            <p>Arctic</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-igloo"></i></div>
            <p>Dom</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-plane-arrival"></i></div>
            <p>Airport</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-umbrella-beach"></i></div>
            <p>Beach</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-utensils"></i></div>
            <p>Food</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-spa"></i></div>
            <p>Spa</p>
          </div>
          <div class="filter">
            <div><i class="fa-solid fa-wifi"></i></div>
            <p>Wifi</p>
          </div>
        </div>
      </div>
      <i class="fa-solid fa-angle-right fa-xl" id="nextBtn"></i>
      <div class="tax-toggle">
        <div class="form-check-reverse form-switch">
          <input
            class="form-check-input"
            type="checkbox"
            role="switch"
            id="flexSwitchCheckDefault"
          />
          <label class="form-check-label" for="flexSwitchCheckDefault"
            >Display total after taxes</label
          >
        </div>
      </div>
    </div>
  </div>
  
  <div class="row">
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
   
    <% for( let listing of allListings){ %>
        <% if (searchData.inputData == listing.location || searchData.inputData == listing.country ) {%>
    <a href="/listings/<%= listing._id %>" class="listing-links">
      <div class="card col listing-card">
        <img
          src="<%= listing.image.url%>"
          class="card-img-top"
          alt="listing_image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN")%>/Night
            <i class="tax-info">&nbsp; &nbsp; +18% GST</i>
          </p>
        </div>
      </div></a
    >
    <% } %>

    <% } %>
  </div>
  </div>